import discord
from discord.ext.commands import Bot
from discord.ext import commands
import asyncio
import time

client = discord.Client()
client = commands.Bot(command_prefix = "!")

@client.event
async def on_ready(): 
    print("bot is ready")

@client.event
async def  on_message(message):
    if message.content == "cookie":
        await client.send_message(message.channel, ":cookie:")

@client.event
async def on_message(message):
    if message.content.startswith('!ping'):
        userID = message.author.id
        await client.send_message(message.channel, "<@%s> pong!" % (userID))
    if message.content.startswith('hey'):
        userID = message.author.id
        await client.send_message(message.channel, "<@%s> hi" % (userID))   
    if message.content.startswith('how are you'):
        userID = message.author.id
        await client.send_message(message.channel, "<@%s> im good how about you ?" % (userID))
    if message.content.startswith('hi'):
        userID = message.author.id
        await client.send_message(message.channel, "<@%s> hi" % (userID))
    if message.content.startswith('do you know me'):
        userID = message.author.id
        await client.send_message(message.channel, "<@%s> i dont know" % (userID))   

          


client.run("NDUyOTg1NjgyMzgyNTUzMDg4.DfkapQ.ywuXpX5tpQ4bZ-yc4m-DdfCx4vw")
